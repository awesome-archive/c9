WORKDIR /root

SHELL ["/bin/bash", "-c"]

ENV LANG="C.UTF-8"

# ==================================================================
# add files
# ------------------------------------------------------------------

COPY build/ /tmp/build/

# ==================================================================
# test
# ------------------------------------------------------------------

RUN ls -lah /tmp/build

# ==================================================================
# meta
# ------------------------------------------------------------------

ENV C9_AUTH=root:webide
ENV EXTERNAL_PORT=

CMD ["/bin/bash"]
